<NavigationLock OnBeforeInternalNavigation="OnBeforeInternalNavigation" />

<EditForm EditContext="editContext" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <h2 class="mb-4">Insertar Hackaton:</h2>
    <div class="mb-3">
        <label>Nombre Hackaton:</label>
        <div>
            <InputText class="form-control" @bind-Value="@Hackaton.Name" />
            <ValidationMessage For="@(() => Hackaton.Name)" />
        </div>
    </div>
    <div class="mb-3">
        <label>Fecha de inicio:</label>
        <div>
            <InputDate class="form-control" @bind-Value="@Hackaton.InitialDate" />
            <ValidationMessage For="@(() => Hackaton.InitialDate)" />
        </div>
    </div>
    <div class="mb-3">
        <label>Fecha de fin:</label>
        <div>
            <InputDate class="form-control" @bind-Value="@Hackaton.FinalDate" />
            <ValidationMessage For="@(() => Hackaton.FinalDate)" />
        </div>
    </div>
    <div class="mb-3">
        <label>Tema del Hackaton:</label>
        <div>
            <InputText class="form-control" @bind-Value="@Hackaton.Topic" />
            <ValidationMessage For="@(() => Hackaton.Topic)" />
        </div>
    </div>
    <div class="mb-3">
        <label>Organizador:</label>
        <div>
            <InputText class="form-control" @bind-Value="@Hackaton.Organizer" />
            <ValidationMessage For="@(() => Hackaton.Organizer)" />
        </div>
    </div>

    <div class="mt-4">
        <button class="btn btn-primary" type="submit">Guardar cambios</button>
        <button class="btn btn-success" @onclick="ReturnAction">Regresar</button>
    </div>
</EditForm>
